<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/metaDatos') %>
        <link rel="stylesheet" href="/css/registerStyle.css">
        <title>Document</title>
</head>

<body>

    <%- include('./partials/header') %>

    <main>
        <form action="/users/register" method="POST" class="form-register" enctype="multipart/form-data">
            <h2>CREAR CUENTA</h2>
            <div>
                <label for="nombre">Nombre</label>
                <input type="text" name="nombre" id="nombre" placeholder="Nombre" required>
            </div>
            <div>
                <label for="apellido">Apellido</label>
                <input type="text" name="apellido" id="apellido" placeholder="Apellido" required>
            </div>
            <div>
                <label for="tipodoc">Tipo de Documento</label>
                <select name="tipodoc" id="tipodoc" required>
                    <option value="Seleccione">Seleccione</option>
                    <option value="DNI">Documento Nacional de Identidad</option>
                    <option value="Pasaporte">Pasaporte</option>
                </select>
            </div>
            <div>
                <label for="documento">Documento</label>
                <input type="text" name="documento" id="documento" placeholder="N° de Documento" required>
            </div>
            <div>
                <label for="domicilio">Domicilio</label>
                <input type="text" name="domicilio" id="domicilio" placeholder="Domicilio" required>
            </div>
            <div>
                <label for="fecha_nac">Fecha de Nacimiento</label>
                <input type="date" name="fecha_nac" id="fecha_nac" placeholder="" required>
            </div>
            <div>
                <label for="sexo">Sexo</label>
                <select name="sexo" id="sexo" required>
                    <option value="Seleccione">Seleccione</option>
                    <option value="M">Masculino</option>
                    <option value="F">Femenino</option>
                    <option value="X">No Binario</option>
                </select>
            </div>
            <div>
                <label for="telefono">Teléfono</label>
                <input type="text" name="telefono" id="telefono" placeholder="N° de Teléfono" required>
            </div>
            <div>
                <label for="email">E-mail</label>
                <input type="email" name="email" id="email" placeholder="E-mail" required>
            </div>
            <div>
                <label for="nombre_usuario">Nombre de Usuario</label>
                <input type="text" name="nombre_usuario" id="nombre_usuario" placeholder="Nombre de usuario" required>
            </div>
            <div class="form-pass">
                <label for="password">Contraseña</label>
                <input type="password" name="password" id="password" class="input-pass" placeholder="Contraseña"
                    required>
                <i class="fa-solid fa-eye" id="btn-password"
                    onclick="mostrarContrasena('password', 'btn-password')"></i>
            </div>
            <div class="form-pass">
                <label for="re-password">Confirmar contraseña</label>
                <input type="password" name="re-password" id="re-password" class="input-pass"
                    placeholder="Confirmar contraseña" required>
                <i class="fa-solid fa-eye" id="btn-re-password"
                    onclick="mostrarContrasena('re-password', 'btn-re-password')"></i>
            </div>
            <div>
                <label for="imagen">Imagen de perfil</label>
                <input class="imagen" type="file" name="userAvatar" id="image">
            </div>

            <section class="errores">
                <ul>
                    
                </ul>
            </section>

            <button type="submit" class="btn-register">Registrarse</button>
            
        </form>
    </main>

    <%- include('./partials/footer') %>

    <script src="/js/userRegisterValidation.js">
        function mostrarContrasena(tipoId, iconId) {
            var tipo = document.getElementById(tipoId);
            var icon = document.getElementById(iconId);

            if (tipo.type == "password") {
                tipo.type = "text";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            } else {
                tipo.type = "password";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            }
        }
    </script>
</body>

</html>
