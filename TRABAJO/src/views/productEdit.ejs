<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/metaDatos') %>
        <link rel="stylesheet" href="/css/registerStyle.css">
        <link rel="stylesheet" href="/css/style.css">
        <title>Agregar Productos</title>
</head>

<body>

    <%- include('./partials/header') %>

        <main>
            <form action="/products/productEdit/<%= productoSeleccionado.id%>?_method=PUT" method="POST" class="form-register" enctype="multipart/form-data">
                <h2>AGREGAR PRODUCTO</h2>
                <div>
                    <label for="nombreProducto">Nombre del producto</label>
                    <input type="text" name="nombre" id="nombre" value="<%= productoSeleccionado.nombre%>" required>
                </div>
                <div>
                    <label for="descripciÃ³n">Descripcion</label>
                    <textarea name="descripcion" id="descripcion" rows="5" cols="33"><%= productoSeleccionado.descripcion%>
                    </textarea>
                </div>
                <div>
                    <label for="imagen">Imagen</label>
                    <input type="file" name="imagen" id="imagen">
                </div>
                <div>
                    <label for="categorias">Categorias</label>
                    <select name="categorias" id="categorias" required>
                        <option value="Seleccione">Seleccione</option>
                        <% if (productoSeleccionado.categorias == "Consolas"){%>
                            <option value="Consolas" selected>Consolas</option>
                        <%}else{%>
                            <option value="Consolas">Consolas</option>
                        <%}%>

                        <% if (productoSeleccionado.categorias == "Cartuchos"){%>
                            <option value="Cartuchos" selected>Cartuchos</option>
                        <%}else{%>
                            <option value="Cartuchos">Cartuchos</option>
                        <%}%>

                        <% if (productoSeleccionado.categorias == "Accesorios"){%>
                            <option value="Accesorios" selected>Accesorios</option>
                        <%}else{%>
                            <option value="Accesorios">Accesorios</option>
                        <%}%>

                        <% if (productoSeleccionado.categorias == "Varios"){%>
                            <option value="Varios" selected>Varios</option>
                        <%}else{%>
                            <option value="Varios">Varios</option>
                        <%}%>
                    
                    </select>
                </div>
                <div>
                    <label for="descuento">Descuento</label>
                    <input type="number" name="descuento" id="descuento" placeholder="Descuento" required value="<%= productoSeleccionado.descuento%>" >
                </div>
                <div>
                    <label for="precio">Precio</label>
                    <input type="text" name="precio" id="precio" placeholder="Precio" required value="<%= productoSeleccionado.precio%>" >
                </div>
                <div>
                    <label for="historia">Historia</label>
                    <textarea name="historia" id="historia" rows="5" cols="33"><%= productoSeleccionado.historia%>
                    </textarea>
                </div>
                <div>
                    <label for="requisitos">Requisitos</label>
                    <textarea name="requisitos" id="requisitos" rows="5" cols="33"><%= productoSeleccionado.requisitos%>
                    </textarea>
                </div>

            <button type="submit" class="btn-register">Editar!</button>
        </form>
    </main>

    <%- include('./partials/footer') %>
</body>

</html>